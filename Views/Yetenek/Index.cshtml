@using Microsoft.Ajax.Utilities
@using MVC_Cv.Models.Entity
@model List<TblYetenek>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string renk = "";
    string label = "";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title" style="font-size:30px"><b>YETENEK LİSTESİ</b></h3>

                            </div>
                            
                           
                            <div class="card-body">
                                @foreach(var item in Model){}
                                <table class="table table-bordered">

                                    <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Yetenek</th>
                                        <th>Derece</th>
                                        <th style="width: 40px">Oran</th>
                                        <th>Düzenle</th>
                                        <th>Sil</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    @foreach (var item in Model)
                                    {
                                        if (item.Oran >= 0 && item.Oran <= 50)
                                        {
                                            renk = "progress-bar bg-danger";
                                            label = "badge bg-warning";
                                        }
                                        if (item.Oran >= 51 && item.Oran <= 70)
                                        {
                                            renk = "progress-bar bg-warning";
                                            label = "badge bg-danger";
                                        }
                                        if (item.Oran >= 71 && item.Oran <= 84)
                                        {
                                            renk = "progress-bar bg-primary";
                                            label = "badge bg-success";
                                        }
                                        if (item.Oran >= 85 && item.Oran <= 100)
                                        {
                                            renk = "progress-bar bg-success";
                                            label = "badge bg-primary";
                                        }
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Yetenek</td>
                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@renk" style="width:@item.Oran%"></div>

                                                </div>
                                            </td>
                                            <td><span class="@label">@item.Oran%</span></td>
                                            <td>
                                                <a class="btn btn-outline-dark" href="../Yetenek/YetenekDüzenle/@item.ID">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>

                                            </td>
                                            <td>
                                                <a href="../Yetenek/YetenekSil/@item.ID" class="btn btn-outline-dark">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>

                                        </tr>
                                    }
                                    </tbody>



                                </table>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </section>
        <div class="card-body" ><a href="../Yetenek/YetenekEkle/"   class="btn btn-danger  fas fa-plus-square">                      Ekle </a></div>
        <br />
        <br />
        <!-- /.content -->
    </div>
                            
</body>
</html>
